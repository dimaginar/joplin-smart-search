{
  "name": "joplin-smart-search",
  "version": "0.1.0",
  "description": "Semantic search over Joplin notes",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "APPIMAGE_EXTRACT_AND_RUN=1 tauri build",
    "tauri:build:win-exe": "tauri build --target x86_64-pc-windows-gnu --no-bundle",
    "tauri:build:win": "tauri build --runner cargo-xwin --target x86_64-pc-windows-msvc --no-bundle && mkdir -p src-tauri/target/x86_64-pc-windows-msvc/release/bundle/nsis && makensis installer.nsi"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@types/dompurify": "^3.0.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "dompurify": "^3.3.1",
    "lucide-react": "^0.400.0",
    "marked": "^17.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.3.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@tauri-apps/cli": "2.9.6",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "tailwindcss": "^4.0.0",
    "tw-animate-css": "^1.2.0",
    "typescript": "~5.6.0",
    "vite": "^5.4.0"
  }
}
